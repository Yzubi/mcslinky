{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Inky",
            "type": "legacy",
            "request": "launch",
            "program": "${workspaceRoot}/app/main-process/main.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": "${workspaceRoot}/app/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/app/node_modules/.bin/electron.cmd"
            },
            "runtimeArgs": [
                "app/",
           //     "--enable-logging"
            ],
            "env": {"ELECTRON_ENABLE_LOGGING": "1"},
            //"externalConsole": true,
            "sourceMaps": false,
            //"outDir": null
        },
	  {
              "name": "Electron: Renderer",
              "type": "chrome",
              "request": "attach",
              "port": 9223,
              "webRoot": "${workspaceFolder}",
              "timeout": 30000
	  },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            "port": 5858,
            "sourceMaps": false,
            "outDir": null
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run AVA test serially",
            "program": "${workspaceRoot}/app/node_modules/ava/profile.js",
            "args": [
                "--serial",
                "${file}"
            ],
            "skipFiles": [
                "<node_internals>/**/*.js"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Inky: All",
            "configurations": [
                "Inky",
                "Electron: Renderer"
            ]
        }
    ]
}
